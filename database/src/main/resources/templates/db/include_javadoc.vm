#end
#end
#end
#if( ${relcnt} > 0)
 * </ul>
#end
#set( $relcnt = 0 )
#foreach( $col in $table.columns )
#if( ${col.referencedByList.size()} > 0 )
#if( ${relcnt} == 0 )
